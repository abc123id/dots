{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.28/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "alt_focus_hack": true,
  "mouse_follows_focus": true,
  "focus_follows_mouse": "Komorebi",
  "default_workspace_padding": 6,
  "default_container_padding": 6,
  "border": true,
  "border_width": 4,
  "border_offset": -1,
  "border_style": "System",
  "border_implementation": "Komorebi",
  "border_colours": {
    "single": "#ebbcba",
    "stack": "#00a542",
    "monocle": "#ff3399",
    "unfocused": "#6e6a86"
  },
  "transparency": true,
  "transparency_alpha": 240,
  "animation": {
    "enabled": true,
    "duration": 250,
    "style": "EaseOutExpo",
    "fps": 60
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "VerticalStack"
        },
        {
          "name": "II",
          "layout": "VerticalStack"
        },
        {
          "name": "III",
          "layout": "VerticalStack"
        },
        {
          "name": "IV",
          "layout": "VerticalStack"
        },
        {
          "name": "V",
          "layout": "VerticalStack"
        },
        {
          "name": "VI",
          "layout": "VerticalStack"
        },
        {
          "name": "VII",
          "layout": "VerticalStack"
        },
        {
          "name": "VIII",
          "layout": "VerticalStack"
        },
        {
          "name": "IX",
          "layout": "VerticalStack"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP"
        },
        {
          "name": "II",
          "layout": "BSP"
        },
        {
          "name": "III",
          "layout": "BSP"
        },
        {
          "name": "IV",
          "layout": "BSP"
        },
        {
          "name": "V",
          "layout": "BSP"
        },
        {
          "name": "VI",
          "layout": "BSP"
        },
        {
          "name": "VII",
          "layout": "BSP"
        },
        {
          "name": "VIII",
          "layout": "BSP"
        },
        {
          "name": "IX",
          "layout": "BSP"
        }
      ]
    }
  ]
}
